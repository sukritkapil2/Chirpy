<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F3E8"
        app:srcCompat="@drawable/ic_group_4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-171dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/gabriela"
        android:text="Chirpy"
        android:textColor="#F6A519"
        android:textFontWeight="600"
        android:textSize="58sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/gabriela"
        android:text="chirp with your friends"
        android:textColor="#D8991B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/make_btn"
        android:layout_width="267dp"
        android:layout_height="50dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/desbtn"
        app:cornerRadius="22dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Make a Nest"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/join_btn"
        android:layout_width="267dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/desbtn"
        android:fontFamily="@font/roboto_medium"
        android:text="Join a Nest"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make_btn" />

    <ImageButton
        android:id="@+id/sign_out"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/desbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_btn"
        app:srcCompat="@drawable/ic_exit_to_app_white_48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>